{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/clim0074/DataVisualisation2/main/JS/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "tooltip"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#797575",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "tooltip"}}
    },
    {
      "data": {"graticule": {"step": [15, 15]}},
      "mark": {
        "type": "geoshape",
        "stroke": "#625555",
        "strokeOpacity": 0.5,
        "strokeWidth": 0.2
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/clim0074/DataVisualisation2/main/JS/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "stroke": "#8f1f1f", "strokeWidth": 1},
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/clim0074/DataVisualisation2/main/Data/Noodle%20Consumption.csv"
            },
            "key": "Country",
            "fields": ["ConsumptionValue", "Population", "Year"]
          }
        },
        {
          "calculate": "parseInt(datum.ConsumptionValue) / parseInt(datum.Population) * 1000000",
          "as": "2022 Consumption Value"
        },
        {"filter": "datum.Year == 2022"}
      ],
      "encoding": {
        "color": {
          "field": "2022 Consumption Value",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 25, 50],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "ConsumptionValue",
            "type": "quantitative",
            "title": "Total Consumption Value"
          },
          {
            "field": "2022 Consumption Value",
            "type": "quantitative",
            "title": "Consumption value per 1 million population",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {"legend": {"orient": "bottom-left"}}
}
